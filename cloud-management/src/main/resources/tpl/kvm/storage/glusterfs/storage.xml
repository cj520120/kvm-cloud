<pool type="netfs">
    <name>{{name}}</name>
    <source>
        {% set __host=cloud:parseRandomFirstUri(storage.param.uri,"24007") %}
        <host name='{{__host.address}}' port='{{__host.port}}'/>
        <dir path="{{storage.param.volume}}"/>
        <format type="glusterfs"/>
    </source>
    <target>
        <path>{{storage.mount}}</path>
        <permissions>
            <mode>0777</mode>
            <owner>0</owner>
            <group>0</group>
        </permissions>
    </target>
</pool>

