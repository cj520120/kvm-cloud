<interface type="bridge">
    <mac address="{{nic.address}}"/>
    <model type="{{nic.type}}"/>
    <source bridge="{{nic.bridge}}"/>
<!--    <source network='{{nic.network}}' portgroup='{{nic.portgroup}}'/> 后期采用，前期采用详细配置-->
    <address type="pci" domain="0x0000" bus="0x00" slot="{{nic.slot}}" function="0x0"/>
    <link state="up"/>
    {% if nic.ovs %}
    <virtualport type="openvswitch"/>
    {% if nic.ovs.vlan > 0 %}
    <vlan trunk="no">
        <tag id="{{nic.ovs.vlan}}"/>
    </vlan>
    {% endif %}
    {% endif %}
</interface>