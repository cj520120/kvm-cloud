<pool type="netfs">
    <name>{{name}}</name>
    <source>
        <host name='{{uri}}'/>
        <dir path="{{path}}"/>
        <format type="nfs"/>
    </source>
    <target>
        <path>{{mount}}</path>
        <permissions>
            <mode>0777</mode>
            <owner>0</owner>
            <group>0</group>
        </permissions>
    </target>
</pool>
